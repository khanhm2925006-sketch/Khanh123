def ask_question(idx, qinfo):
    """In cÃ¢u há»i, nháº­n Ä‘Ã¡p Ã¡n, tráº£ True/False tÃ¹y Ä‘Ãºng sai"""
    print(f"\nCÃ‚U {idx+1}:")
    print(textwrap.fill(qinfo["q"], width=70))
    for choice in qinfo["choices"]:
        print("   " + choice)
    while True:
        user = input("ÄÃ¡p Ã¡n cá»§a báº¡n (A/B/C/D): ").strip().upper()
        if user in {"A", "B", "C", "D"}:
            break
        print(" >> Vui lÃ²ng nháº­p A, B, C hoáº·c D!")
    return user == qinfo["ans"]

def main():
    print("="*60)
    print("        MINI IQ QUIZ â€“ 10 CÃ‚U Há»I TRáº®C NGHIá»†M")
    print("="*60)

    # Trá»™n ngáº«u nhiÃªn Ä‘á»ƒ bÃ i quiz má»—i láº§n khÃ¡c nhau (tuá»³ chá»n)
    random.shuffle(questions)

    score = 0
    for idx, qinfo in enumerate(questions):
        if ask_question(idx, qinfo):
            print(" âœ“ ChÃ­nh xÃ¡c!\n")
            score += 1
        else:
            print(f" âœ— Sai. ÄÃ¡p Ã¡n Ä‘Ãºng: {qinfo['ans']}\n")

    print("="*60)
    print(f"HoÃ n thÃ nh! Báº¡n tráº£ lá»i Ä‘Ãºng {score}/10.")
    percent = score * 10
    print(f"Äiá»ƒm: {percent}%")
    if percent == 100:
        print("Xuáº¥t sáº¯c! ğŸ†")
    elif percent >= 80:
        print("Ráº¥t tá»‘t! ğŸ‘")
    elif percent >= 60:
        print("Táº¡m á»•n, luyá»‡n thÃªm nhÃ©! ğŸ™‚")
    else:
        print("Cá»‘ gáº¯ng láº§n sau! ğŸ’ª")
    print("="*60)

if __name__ == "__main__":
    try:
        main()
    except KeyboardInterrupt:
        sys.exit("\n\nÄÃ£ thoÃ¡t bÃ i quiz.")
